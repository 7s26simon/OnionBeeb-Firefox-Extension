{
  "manifest_version": 2,
  "name": "BBC Onion Redirect",
  "version": "1.1",
  "description": "Convert BBC links to the official Tor onion service.",
  "permissions": [
    "contextMenus",
    "tabs",
    "clipboardWrite"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "icons": {
    "48": "icons/48.png",
    "96": "icons/96.png"
  }
}
