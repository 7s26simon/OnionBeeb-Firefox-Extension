{
  "manifest_version": 2,
  "name": "OnionBeeb",
  "version": "1.2",
  "description": "Convert BBC links to the official Tor onion service.",
  "permissions": [
    "contextMenus",
    "tabs",
    "clipboardWrite"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "icons": {
    "48": "icons/48.png",
    "96": "icons/96.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "strict_min_version": "140.0"
    }
  }
}
